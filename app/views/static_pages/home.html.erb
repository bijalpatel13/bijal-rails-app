<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to my App</h1>
    <h2>
      This is the home page for my app.
    </h2>
    <h3>
      Random facts about me:
    </h3>
    <p>
      1. One of my favorite fictional character is
      <a href="http://gameofthrones.wikia.com/wiki/Daenerys_Targaryen">Daenerys Targaryen.</a>
    </p>
    <p>
      2. My latest performance that was caught on video is
      <a href="http://www.youtube.com/watch?v=ZYKlSJwPpgg">here.</a>
    </p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= image_tag "14362607.png" %>
<% end %>
